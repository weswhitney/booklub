<head>
  <title>booKlub</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="nav-bar nav">
      booKlub
    <% if current_user != nil %>
    <span class="auth-links">
      <%= current_user.username %>
    </span>
    <span class="sign-out"><%= link_to "Sign out of booklub", log_out_path, method: "delete" %></span>
    <% else %>
    <span class="auth-links">
      <a href="/auth/twitter">connect with twitter</a>
      <a href="/auth/google_oauth2">connect with google</a>
    </span>
    <% end %>
  </div>

  <main>
    <div class="container">

      <% if notice != nil %>
      <h2><%= notice %></h2>
      <% end %>
      <%= yield %>

    </div>
  </main>

  <footer>
    <div class="fatty-footer">
      <div class="footer-icons">
        <%= link_to "https://students.gschool.it/cohorts/3/students/95" do %>
        <%= image_tag("gschool-logo_icon.png") %>
        <% end %>
        |
        <%= link_to "http://www.linkedin.com/pub/wesley-whitney/a5/aa4/442/" do %>
        <%= image_tag("linked_in_icon.png") %>
        <% end %>
        |
        <%= link_to "https://github.com/weswhitney" do %>
        <%= image_tag("GitHub-Mark_icon.png") %>
        <% end %>
        |
        <%= link_to "https://twitter.com/wes_whitney" do %>
        <%= image_tag("Twitter_logo_blue_icon.png") %>
        <% end %>
      </div>
    </div>
  </footer>

</body>
</html>
