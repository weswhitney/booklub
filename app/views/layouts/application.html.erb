<head>
  <title>booKlub</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="navigate-bar nav-fixed">
      <% if current_user != nil %>
      <%= current_user.username %>
      <%= link_to "Sign out of booklub", log_out_path, method: "delete" %>
      <% else %>
      NO USER LOGGED IN
      <% end %>
    </div>
  <header>
    <h1></h1>
  </header>
  <main>
    <% if notice != nil %>
    <h2><%= notice %></h2>
    <% end %>
    <%= yield %>

  </main>
  <footer>
    <div class="fatty-footer">
      <small>wes whitney</small>
    </div>
  </footer>


</body>
