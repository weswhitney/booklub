
<%= form_for @bookclub do |f| %>
<form class="form-inline">
  <div class="form-group">
    <%= f.label "bookclub name" %>
  </div>
  <div class="form-group">
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "start club", :class => "btn btn-default btn-sml" %>
  </div>
</form>
<% end %>
