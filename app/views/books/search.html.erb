<%= form_tag books_search_path, method: "get" do %>
  <%= text_field_tag :q %>
  <%= submit_tag "Search" %>
<% end %>

<% if @books_hash == nil %>
  Please enter search
<% else %>
  <% @books_hash.each do |data| %>
    <h1><%= data['volumeInfo']['title'] %></h1>
    <h1><%= data['volumeInfo']['authors'].try(:join, (', ')) %></h1>
    <h4><%= data['volumeInfo']['description'] %></h4>
    <% if data['volumeInfo'] != nil || data['imageLinks'] != nil || data['smallThumbnail'] != nil %>
    NO IMAGE
    <% else %>
    <img src="<%= data['volumeInfo']['imageLinks']['smallThumbnail'] %>"/>
    <% end %>
  <% end %>
<% end %>
